<% content_for :breadcrumb do %>
  List of Quests
<% end %>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-icon">
        <div class="card-icon">
          <i class="material-icons">book</i>
        </div>
        <h4 class="card-title">Quests</h4>
      </div>
      <div class="card-body">
        <div class="toolbar">
          <!--        Here you can write extra buttons/actions for the toolbar              -->
        </div>
        <div class="material-datatables">
          <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
            <thead>
              <tr>
                <td colspan="2"></td>
                <% unless current_user.role == "user" %>
                <td colspan="8" class="text-right">
                  <%= link_to new_quest_path do %>
                  <button type="button" class="btn btn-green btn-round">Add new Quest <i class="material-icons">add</i></button>
                  <% end %>
                </td>
                <% end %>
              </tr>
              <tr>
                <th> ID </th>
                <th> Business owner </th>
                <th> Quest name </th>
                <th> Start date </th>
                <th> End date </th>
                <th> Deal name </th>
                <th> Coupon issued </th>
                <th> Coupon claimed </th>
                <th> Coupon redeemed </th>
                <th> Locations </th>
                <th> Status </th>
                <th class="disabled-sorting text-right">Actions</th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th> ID </th>
                <th> Business owner </th>
                <th> Quest name </th>
                <th> Start date </th>
                <th> End date </th>
                <th> Deal name </th>
                <th> Coupon issued </th>
                <th> Coupon claimed </th>
                <th> Coupon redeemed </th>
                <th> Locations </th>
                <th> Status </th>
                <th class="disabled-sorting text-right">Actions</th>
              </tr>
              
            </tfoot>
            <tbody>
              <% @quests.each do |quest| %>
                <%
                  :ruby
                    deal = quest.deal
                %>

                <tr>
                  <td><%= quest.id %></td>
                  <td><%= deal.present? ? deal.user.username : "NA" %></td>
                  <td><%= quest.title %>
                  <td><%= quest.start_datetime.try(:strftime, "%d-%b-%Y %I:%M %p") %></td>
                  <td><%= quest.end_datetime.try(:strftime, "%d-%b-%Y %I:%M %p") %></td>
                  <td><%= deal.present? ? deal.name : "NA" %></td>
                  <td><%= (deal.present? && deal.coupon_count.present?) ? (link_to deal.coupon_count, deal_coupons_path(deal)) : 0 %></td>
                  <td><%= deal.present? ? deal.coupon_claimed : "NA" %></td>
                  <td><%= deal.present? ? deal.coupon_redeem_count : "NA" %></td>
                  <td><%= quest.get_locations_name %></td>
                  <td><%= quest.status %></td>
                  <td class="text-right">
                    <%= link_to quest_path(quest), class: "btn btn-link btn-info btn-just-icon like" do %>
                      <i class="material-icons">pageview</i>
                    <% end %>
                    <%= link_to edit_quest_path(quest), class: "btn btn-link btn-warning btn-just-icon edit" do %>
                      <i class="material-icons">dvr</i>
                    <% end %>
                    <% if quest.pause %>
                      <%= link_to resume_quest_path(quest), method: :post, data: { confirm: 'Are you sure?' } do %>
                        <i class="material-icons">play_arrow</i>
                      <% end %>
                    <% else %>
                      <%= link_to pause_quest_path(quest), method: :post, data: { confirm: 'Are you sure?' } do %>
                        <i class="material-icons">pause</i>
                      <% end %>
                    <% end %>
                    <%= link_to quest_path(quest), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link btn-danger btn-just-icon remove", authenticity_token: true do %>
                      <i class="material-icons">close</i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              
              
            </tbody>
            
          </table>
        </div>
      </div>
      <!-- end content-->
    </div>
    <!--  end card  -->
  </div>
  <!-- end col-md-12 -->
</div>
