          <% content_for :breadcrumb do %>
            List of Quest Requests
          <% end %>
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">book</i>
                  </div>
                  <h4 class="card-title">Quest Requests</h4>
                </div>
                <div class="card-body">
                  <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                  </div>
                  <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                      <thead>
                        <tr>
                          <td colspan="2"></td>
                          <% unless current_user.role == "user" %>
                          <td colspan="8" class="text-right">
                            <%= link_to new_quest_path do %>
                            <button type="button" class="btn btn-green btn-round">Add new Quest <i class="material-icons">add</i></button>
                            <% end %>
                          </td>
                          <% end %>
                        </tr>
                        <tr>
                          <th>ID</th>
                          <th>Business Owner</th>
                          <th>Requested Date</th>
                          <th>Deal Name</th>
                          <th>Coupon Issued</th>
                          <th>Type of Deal</th>
                          <th class="disabled-sorting text-right">Actions</th>
                        </tr>
                      </thead>
                      <tfoot>
                        <tr>
                          <th>ID</th>
                          <th>Business Owner</th>
                          <th>Requested Date</th>
                          <th>Deal Name</th>
                          <th>Coupon Issued</th>
                          <th>Type of Deal</th>
                          <th class="disabled-sorting text-right">Actions</th>
                        </tr>
                        
                      </tfoot>
                      <tbody>
                        <% @quest_requests.each do |quest_request| %>
                          <tr>
                            <td><%= quest_request.id %></td>
                            <td><%= quest_request.user.username %></td>
                            <td><%= quest_request.posted_date.try(:strftime, '%d-%b-%Y') %></td>
                            <td><%= quest_request.name %></td>
                            <td><%= quest_request.coupon_count %></td>
                            <td><%= quest_request.discount_type %></td>
                            <td class="text-right">
                              <%= link_to quest_request, class: "btn btn-link btn-info btn-just-icon like" do %>
                                <i class="material-icons">pageview</i>
                              <% end %>
                              <%= link_to edit_deal_path(quest_request), class: "btn btn-link btn-warning btn-just-icon edit" do %>
                                <i class="material-icons">dvr</i>
                              <% end %>
                              <%= link_to quest_request, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link btn-danger btn-just-icon remove", authenticity_token: true do %>
                                <i class="material-icons">close</i>
                              <% end %>
                              <%= link_to "Create Quest", new_quest_request_quest_path(quest_request.id), class: "btn btn-sm btn-primary" %>
                            </td>
                          </tr>
                        <% end %>
                        
                        
                      </tbody>
                      
                    </table>
                  </div>
                </div>
                <!-- end content-->
              </div>
              <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
          </div>